<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--
  - Default JODConverter document formats definition as Spring XML
 -->
<beans>

  <bean id="documentFormats" class="java.util.ArrayList">
    <constructor-arg>
      <list>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="PDF"/>
          <property name="extension" value="pdf"/>
          <property name="mediaType" value="application/pdf"/>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="TEXT">
                <map>
                  <entry key="FilterName"><value>writer_pdf_Export</value></entry>
                  <!-- Example of how to set custom PDF options -->
                  <!--
                  <entry key="FilterData">
                    <map>
                      <entry key="SelectPdfVersion"><value type="java.lang.Integer">1</value></entry>
                      <entry key="ReduceImageResolution"><value type="java.lang.Boolean">true</value></entry>
                    </map>
                  </entry>
                  -->
                </map>
              </entry>
              <entry key="SPREADSHEET">
                <map>
                  <entry key="FilterName"><value>calc_pdf_Export</value></entry>
                </map>
              </entry>
              <entry key="PRESENTATION">
                <map>
                  <entry key="FilterName"><value>impress_pdf_Export</value></entry>
                </map>
              </entry>
              <entry key="DRAWING">
                <map>
                  <entry key="FilterName"><value>draw_pdf_Export</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="Flash"/>
          <property name="extension" value="swf"/>
          <property name="mediaType" value="application/x-shockwave-flash"/>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="PRESENTATION">
                <map>
                  <entry key="FilterName"><value>impress_flash_Export</value></entry>
                </map>
              </entry>
              <entry key="DRAWING">
                <map>
                  <entry key="FilterName"><value>draw_flash_Export</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="HTML"/>
          <property name="extension" value="html"/>
          <property name="mediaType" value="text/html"/>
          <property name="inputFamily" value="TEXT"/>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="TEXT">
                <map>
                  <entry key="FilterName"><value>HTML (StarWriter)</value></entry>
                </map>
              </entry>
              <entry key="SPREADSHEET">
                <map>
                  <entry key="FilterName"><value>HTML (StarCalc)</value></entry>
                </map>
              </entry>
              <entry key="PRESENTATION">
                <map>
                  <entry key="FilterName"><value>impress_html_Export</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="OpenDocument Text"/>
          <property name="extension" value="odt"/>
          <property name="mediaType" value="application/vnd.oasis.opendocument.text"/>
          <property name="inputFamily" value="TEXT"/>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="TEXT">
                <map>
                  <entry key="FilterName"><value>writer8</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="OpenOffice.org 1.0 Text Document"/>
          <property name="extension" value="sxw"/>
          <property name="mediaType" value="application/vnd.sun.xml.writer"/>
          <property name="inputFamily" value="TEXT"/>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="TEXT">
                <map>
                  <entry key="FilterName"><value>StarOffice XML (Writer)</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="Microsoft Word"/>
          <property name="extension" value="doc"/>
          <property name="mediaType" value="application/msword"/>
          <property name="inputFamily" value="TEXT"/>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="TEXT">
                <map>
                  <entry key="FilterName"><value>MS Word 97</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="Rich Text Format"/>
          <property name="extension" value="rtf"/>
          <property name="mediaType" value="text/rtf"/>
          <property name="inputFamily" value="TEXT"/>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="TEXT">
                <map>
                  <entry key="FilterName"><value>Rich Text Format</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="WordPerfect"/>
          <property name="extension" value="wpd"/>
          <property name="mediaType" value="application/wordperfect"/>
          <property name="inputFamily" value="TEXT"/>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="Plain Text"/>
          <property name="extension" value="txt"/>
          <property name="mediaType" value="text/plain"/>
          <property name="inputFamily" value="TEXT"/>
          <property name="loadProperties">
            <map>
              <entry key="FilterName"><value>Text (encoded)</value></entry>
              <entry key="FilterOptions"><value>utf8</value></entry>
            </map>
          </property>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="TEXT">
                <map>
                  <entry key="FilterName"><value>Text (encoded)</value></entry>
                  <entry key="FilterOptions"><value>utf8</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="MediaWiki wikitext"/>
          <property name="extension" value="wiki"/>
          <property name="mediaType" value="text/x-wiki"/>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="TEXT">
                <map>
                  <entry key="FilterName"><value>MediaWiki</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="OpenDocument Spreadsheet"/>
          <property name="extension" value="ods"/>
          <property name="mediaType" value="application/vnd.oasis.opendocument.spreadsheet"/>
          <property name="inputFamily" value="SPREADSHEET"/>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="SPREADSHEET">
                <map>
                  <entry key="FilterName"><value>calc8</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="OpenOffice.org 1.0 Spreadsheet"/>
          <property name="extension" value="sxc"/>
          <property name="mediaType" value="application/vnd.sun.xml.calc"/>
          <property name="inputFamily" value="SPREADSHEET"/>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="SPREADSHEET">
                <map>
                  <entry key="FilterName"><value>StarOffice XML (Calc)</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="Microsoft Excel"/>
          <property name="extension" value="xls"/>
          <property name="mediaType" value="application/vnd.ms-excel"/>
          <property name="inputFamily" value="SPREADSHEET"/>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="SPREADSHEET">
                <map>
                  <entry key="FilterName"><value>MS Excel 97</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="Comma Separated Values"/>
          <property name="extension" value="csv"/>
          <property name="mediaType" value="text/csv"/>
          <property name="inputFamily" value="SPREADSHEET"/>
          <property name="loadProperties">
            <map>
              <entry key="FilterName"><value>Text - txt - csv (StarCalc)</value></entry>
              <entry key="FilterOptions"><value>44,34,0</value></entry>
            </map>
          </property>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="SPREADSHEET">
                <map>
                  <entry key="FilterName"><value>Text - txt - csv (StarCalc)</value></entry>
                  <entry key="FilterOptions"><value>44,34,0</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="Tab Separated Values"/>
          <property name="extension" value="tsv"/>
          <property name="mediaType" value="text/tab-separated-values"/>
          <property name="inputFamily" value="SPREADSHEET"/>
          <property name="loadProperties">
            <map>
              <entry key="FilterName"><value>Text - txt - csv (StarCalc)</value></entry>
              <entry key="FilterOptions"><value>9,34,0</value></entry>
            </map>
          </property>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="SPREADSHEET">
                <map>
                  <entry key="FilterName"><value>Text - txt - csv (StarCalc)</value></entry>
                  <entry key="FilterOptions"><value>9,34,0</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

        <bean class="net.sf.jodconverter.spring.DocumentFormatBean">
          <property name="name" value="OpenDocument Presentation"/>
          <property name="extension" value="odp"/>
          <property name="mediaType" value="application/vnd.oasis.opendocument.presentation"/>
          <property name="inputFamily" value="PRESENTATION"/>
          <property name="storePropertiesByFamily">
            <map>
              <entry key="PRESENTATION">
                <map>
                  <entry key="FilterName"><value>impress8</value></entry>
                </map>
              </entry>
            </map>
          </property>
        </bean>

      </list>
    </constructor-arg>
  </bean>

</beans>